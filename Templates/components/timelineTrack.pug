//- Timeline Track Component
//- 時間軸軌道組件

.timeline-track-panel
  h2.panel-title Timeline Track
  
  .timeline-track-container.timeline-domestic
    .track-content
      p 
        | DOMESTIC
        br
        | 4 Nodes
    .timeline-visual-container
      .timeline-horizontal-line
      .timeline-nodes
        .timeline-node.completed(data-step="1")
          .node-date OCT 10
          .node-status
            .status-text Order Created
            .status-time 10:16
        .timeline-node.processing(data-step="2")
          .node-date OCT 12
          .node-status
            .status-text Shipment Collected
            .status-time Processing...
        .timeline-node.pending(data-step="3")
          .node-date TBD
          .node-status
            .status-text In Transit
            .status-time --:--
        .timeline-node.pending(data-step="4")
          .node-date TBD
          .node-status
            .status-text Shipment Delivered
            .status-time --:--
      
  .timeline-track-container.timeline-import_export
    .track-content
      p 
        | IMPORT/EXPORT
        br
        | 7 Nodes with 2 Events
    .timeline-visual-container
      .timeline-horizontal-line
      .timeline-nodes
        .timeline-node.completed(data-step="1")
          .node-date OCT 09
          .node-status
            .status-text Order Created
            .status-time 03:45
        .timeline-node.completed(data-step="2")
          .node-date OCT 09
          .node-status
            .status-text Shipment Collected
            .status-time 06:10
        .timeline-node.completed(data-step="3")
          .node-date OCT 10
          .node-status
            .status-text Export Released
            .status-time 10:38
        .timeline-node.completed(data-step="4")
          .node-date OCT 11
          .node-status
            .status-text In Transit
            .status-time 11:45
        .timeline-node.processing(data-step="5")
          .node-date OCT 11
          .node-status
            .status-text Import Released
            .status-time Processing...
        .timeline-node.pending(data-step="6")
          .node-date TBD
          .node-status
            .status-text Out for Delivery
            .status-time --:--
        .timeline-node.pending(data-step="7")
          .node-date TBD
          .node-status
            .status-text Shipment Delivered
            .status-time --:--
      .timeline-events
        .timeline-event(data-event="event-1")
          .event-tag
            .event-tag-text Dry ice refilled
        //- .timeline-event(data-event="event-2")  // 隱藏第2個event
      
  .timeline-track-container.timeline-cross_trade_layered
    .track-content
      p
        | CROSS TRADE
        br
        | Origin:4 Nodes / Transit:2 Nodes / Destination:4 Nodes 

    // Transit 階段 (橙色，2 節點) - 移到上方
    .timeline-layer.timeline-transit-layer.transit-stage
      .track-content
        p TRANSIT
      .timeline-visual-container
        .timeline-horizontal-line
        .timeline-nodes
          .timeline-node.timeline-transit(data-step="5")
          .timeline-node.timeline-transit(data-step="6")
    
    // Origin 和 Destination 容器 (100% 寬度)
    .timeline-main-layers
      // Origin 階段 (綠色，4 節點)
      .timeline-origin-wrapper
        .timeline-layer.timeline-origin-layer.origin-stage
          .timeline-visual-container
            .timeline-horizontal-line
            .timeline-nodes
              .timeline-node.timeline-origin(data-step="1")
              .timeline-node.timeline-origin(data-step="2")
              .timeline-node.timeline-origin(data-step="3")
              .timeline-node.timeline-origin(data-step="4")
          .track-content
      
      // Destination 階段 (藍色，4 節點)
      .timeline-destination-wrapper
        .timeline-layer.timeline-destination-layer.destination-stage
          .timeline-visual-container
            .timeline-horizontal-line
            .timeline-nodes
              .timeline-node.timeline-destination(data-step="7")
              .timeline-node.timeline-destination(data-step="8")
              .timeline-node.timeline-destination(data-step="9")
              .timeline-node.timeline-destination(data-step="10")
          .track-content 